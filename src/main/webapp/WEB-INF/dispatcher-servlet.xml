<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Import parent context beans -->
    <import resource="classpath:applicationContext.xml"/>

    <!-- FournisseurController Bean -->
    <bean id="fournisseurController" class="com.tricol.controller.FournisseurController">
        <property name="fournisseurService" ref="fournisseurService"/>
    </bean>


    <!-- URL Mapping -->
    <bean class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="mappings">
            <props>
                <prop key="/api/v1/fournisseurs/**">fournisseurController</prop>
            </props>
        </property>
    </bean>

    <!-- Handler Adapter -->
    <bean class="org.springframework.web.servlet.mvc.SimpleControllerHandlerAdapter"/>

</beans>